<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="min-h-screen bg-gradient-to-b from-orange-300 via-orange-500 to-white">
    {%include "components/navbar.html.jinja"%}

    <div class="flex justify-center mt-10 gap-5">
        
        <div class="max-w-200 flex-none flex bg-red-300">
            <div class="flex flex-row">
            {% for y in cart %}
                <div>
                    <h1 class="font-bold">{{y["Name"]}}</h1>
                </div>
                <div>
                    <img class="h-50 w-70 rounded border-1 border-black" src="{{ y['Image'] }}">
                </div>
            {%endfor%}
            </div>
        </div>
        <form method="post" class="w-14 flex-initial bg-blue-300">
            <button type="submit">submit</button>
        </form>
    </div>


  </body>
</html>