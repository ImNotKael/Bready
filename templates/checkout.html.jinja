<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="min-h-screen bg-gradient-to-b from-orange-300 via-orange-500 to-white">
    {%include "components/navbar.html.jinja"%}

    <main class="m-auto w-350 grid grid-cols-2 gap-5">



      <div class="col-span-2">
        <div class="flex flex-row items-center gap-5 border-2xl m-3 py-4 px-4">
          <div class="bg-white py-6 px-12 rounded-lg shadow h-fit">
          <h2 class="text-xl font-semibold mb-4">Order Summary</h2>
          {%for x in cart%}
          <div class="space-y-3">
            <div class="flex justify-between">
              <span>{{ x['Name'] }} x{{x['Quantity']}}</span>
              <span>{{ x['Price'] * x['Quantity'] }}</span>
            </div>
          {%endfor%}
          </div>

          <hr class="my-4">

          <div class="flex justify-between text-lg font-bold">
            <span>Total</span>
            <span>{{total}}</span>
          </div>
        </div>
      </div>


        <form method="post" class="w-14 flex-initial bg-blue-300">
            <button type="submit">submit</button>
        </form>
      </div>
          
         
      
    </main>
  </body>
</html>