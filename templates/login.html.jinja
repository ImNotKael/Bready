<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="min-h-screen bg-gradient-to-b from-orange-300 via-orange-500 to-amber-900">
    {%include "components/navbar.html.jinja"%}

    {% for message in get_flashed_messages() %}
        <li>{{ message }}</li>
    {%endfor%}
    <div class="flex justify-center m-5">
    <h1 class="font-bold text-4xl">Log In!</h1>
    </div>
    <div class="flex justify-center bg-orange-400 border-2 border-black mx-auto w-50 rounded shadow">
        <form method="post" class="flex flex-col items-center gap-2">

            <label>Email</label>
            <input class="bg-orange-200 border-1 border-black" name="email" required type="email">

            <label>Password</label>
            <input class="bg-orange-200 border-1 border-black" name="password" required type="password">

            <button name="submit">Log in</button>
        </form>
    </div>
  </body>
</html>