<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="/static/mycss.css" rel="stylesheet" type="text/css">
  </head>
  <body class="min-h-screen bg-gradient-to-b from-orange-300 via-orange-500 to-amber-900">
    {%include "components/navbar.html.jinja"%}
    <h1 class="text-center font-bold text-4xl m-4">Your cart</h1>

    <main class="max-w-4xl mx-auto p-6 mb-5 bg-orange-100 ml-30">
    {% for x in cart %}
      <div class="flex flex-row items-center gap-5">
        <img class="h-50 mx-auto w-70 m-10 rounded border-1 border-black ml-10" src="{{ x['Image'] }}" width="300" height="300">
        <div><h1 class="font-bold">{{x["Name"]}}</h1></div>
        <div><h1 class="font-bold">Quantity: {{x["Quantity"]}}</h1></div>
        <div><h1 class="font-bold">${{ x['Price'] * x['Quantity'] }}</h1></div>
      </div>
    {% endfor %}
    </main>
  </body>
</html>